<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2ECE4"
    tools:context=".AnalyticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Resumen de Encuesta"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total"
            android:text="Encuestas totales: 0"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_marginBottom="12dp"
            android:textColor="?attr/colorOnSurface"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📅 Frecuencia de Visita"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 vez al mes: "
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                    <TextView
                        android:id="@+id/tv_frec_mes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="60%"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 vez cada semana: "
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                    <TextView
                        android:id="@+id/tv_frec_semana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20%"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más de 1 vez a la semana: "
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                    <TextView
                        android:id="@+id/tv_frec_mas_semana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5%"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Casi nunca: "
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                    <TextView
                        android:id="@+id/tv_frec_nunca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15%"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔉 Calidad de Audio"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="8dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excelente: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_audio_excelente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="30%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bueno: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_audio_bueno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="50%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Regular: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_audio_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="15%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Malo: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_audio_malo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="5%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👥 Atención del Personal"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="8dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excelente: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_personal_excelente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="50%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bueno: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_personal_bueno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="40%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Regular: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_personal_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Malo: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_personal_malo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="0%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🧼 Nivel de Higiene"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="8dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excelente: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_higiene_excelente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="20%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bueno: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_higiene_bueno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="45%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Regular: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_higiene_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="30%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Malo: "
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/tv_higiene_malo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="5%"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🍿 Tipo de Sala Preferida"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sala Normal: "
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                    <TextView
                        android:id="@+id/tv_sala_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="65%"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3D: "
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                    <TextView
                        android:id="@+id/tv_sala_3d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20%"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Macro XE: "
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                    <TextView
                        android:id="@+id/tv_sala_macro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15%"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="261dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#D9043D"
            android:text="Volver"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>